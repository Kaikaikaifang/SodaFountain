<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="539dp"
        android:layout_height="343dp"
        android:text="@string/soda"
        android:textAppearance="@style/title"
        app:layout_constraintBottom_toTopOf="@id/button_have"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/soda_colorful"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/soft_drinks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="@id/textview_second"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/soda"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/soft_drinks_colorful"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="@id/textview_second"
        tools:ignore="ContentDescription,MissingConstraints" />

    <Button
        android:id="@+id/button_have"
        android:layout_width="539dp"
        android:layout_height="210dp"
        android:gravity="start|center_vertical"
        android:text="@string/tips"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second" />
</androidx.constraintlayout.widget.ConstraintLayout>